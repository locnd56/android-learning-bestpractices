<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_actionbarbutton_image"
        style="@style/ImageButton_Style"
        android:layout_width="@dimen/imageview_size_large"
        android:layout_height="@dimen/imageview_size_large"
        android:layout_centerInParent="true"
        android:clickable="false" />

    <View
        android:id="@+id/view_actionbarbutton_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/view_actionbarbutton_underline"
        android:background="@drawable/selector_tabactionbar_bg"
        android:clickable="false" />

    <View
        android:id="@+id/view_actionbarbutton_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#C1C1C1"
        android:clickable="false" />

</RelativeLayout>