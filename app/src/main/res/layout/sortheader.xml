<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sortheader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sortheader_text"
            style="@style/TextView_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Header Here" />

        <ImageView
            android:id="@+id/iv_sortheader_sorticon"
            style="@style/ImageView_Style"
            android:layout_width="@dimen/imageview_size_large"
            android:layout_height="@dimen/imageview_size_large"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sortheader_sort"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
</RelativeLayout>