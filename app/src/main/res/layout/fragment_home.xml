<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal">

        <com.locnd.appbase.customview.sortbutton.CustomHeader
            android:id="@+id/fragmenthome_header1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text_header="@string/Header1"></com.locnd.appbase.customview.sortbutton.CustomHeader>

        <com.locnd.appbase.customview.sortbutton.CustomHeader
            android:id="@+id/fragmenthome_header2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text_header="@string/Header2"></com.locnd.appbase.customview.sortbutton.CustomHeader>

        <com.locnd.appbase.customview.sortbutton.CustomHeader
            android:id="@+id/fragmenthome_header3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text_header="@string/Header3"></com.locnd.appbase.customview.sortbutton.CustomHeader>

        <com.locnd.appbase.customview.sortbutton.CustomHeader
            android:id="@+id/fragmenthome_header4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:text_header="@string/Header4"></com.locnd.appbase.customview.sortbutton.CustomHeader>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_friendsfragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"></ListView>
</LinearLayout>